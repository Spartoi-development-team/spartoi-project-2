{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/gpt-5-mini",
  "permission": {
    "*": "allow",
    "bash": {
      "*": "allow",
      "rm *": "deny",
      "sudo *": "deny",
      "dd *": "deny",
      "chmod *": "ask",
      "chown *": "ask"
    },
    "edit": "allow",
    "task": "allow",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow"
    }
  },
  "mcp": {}
}
