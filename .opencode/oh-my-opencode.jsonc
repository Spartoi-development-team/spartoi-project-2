// OH-MY-OPENCODE consolidated config
{
  // model pins
  "model": "github-copilot/gpt-5-mini",
  "small_model": "github-copilot/gpt-4.1",

  // provider control: wildcard entries should come first for clarity
  "enabled_providers": [
    "*",
    "github-copilot"
  ],
  "disabled_providers": [
    "opencode"
  ],

  // permissions: ordered list. Wildcard '*' rules first; specific overrides later.
  "permissions": [
    // catch-all: ask by default
    {
      "match": "*",
      "effect": "ask",
      "actions": ["bash", "write"]
    },
    // explicit allows needed by OMOC workflows
    {
      "match": "*",
      "effect": "allow",
      "actions": ["call_omo_agent", "task", "delegate_task"]
    }
  ],

  // Safety: do not enable EXECUTE in any place by default. This file intentionally
  // does not include an EXECUTE enablement flag.
}
